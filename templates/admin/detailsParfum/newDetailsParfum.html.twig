
{% extends 'admin/admin_layout.html.twig' %}

{% block body %}
    
 

    <div class="container__form">
    
    <h1 class='titre_login_register'>Détailler un produit</h1>
        {{ form_start(form) }}
<span class='informations_connexion'>Ajoutez des détails supplémentaires sur le produit</span>
        <div class="form-select">
          {{ form_widget(form.parfums, {'attr':{'class': 'select'}}) }}
            
        </div>

        <div class="form-group">
            {{ form_label(form.prix) }}
            {{ form_widget(form.prix) }}
            <div class='errors'>
            {{ form_errors(form.prix) }}
            </div>
        </div>

       
        <div class="form-group">
            {{ form_label(form.quantite) }}
            {{ form_widget(form.quantite) }}
            <div class='errors'>
           {{ form_errors(form.quantite) }}
           </div>
        </div>
        <div class="form-select">
          
           {{ form_widget(form.taille, {'attr':{'class': 'select'}}) }}
           
        </div>
        <div class=" checkbox">
         {{ form_widget(form.promotion) }}
            {{ form_label(form.promotion) }}
           
           
        </div>
        <div class="form-group">
         {{ form_widget(form.pourcentagePromotion) }}
            {{ form_label(form.pourcentagePromotion) }}
            <div class='errors'>
              {{ form_errors(form.pourcentagePromotion) }}
              </div>
           
        </div>
        

        <button type="submit" class="btn btn-primary">Enregistrer</button>

        {{ form_end(form) }}
    </div>
{% endblock %}
